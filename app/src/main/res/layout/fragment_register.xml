<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".register.ui.RegisterFragment">
    <ScrollView
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textInputLayout" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="32dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="32dp">

                <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="hint" android:id="@+id/etFullName"/>
            </android.support.design.widget.TextInputLayout>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/etEmail"
                    tools:layout_editor_absoluteX="99dp"
                    app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
                    app:layout_constraintBottom_toTopOf="@+id/etCellPhone"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/etCellPhone"
                    tools:layout_editor_absoluteX="99dp"
                    app:layout_constraintTop_toBottomOf="@+id/etEmail"
                    app:layout_constraintBottom_toTopOf="@+id/etPassword"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/etPassword"
                    tools:layout_editor_absoluteX="99dp"
                    app:layout_constraintTop_toBottomOf="@+id/etCellPhone"
                    app:layout_constraintBottom_toTopOf="@+id/etRepeatPassword"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/etRepeatPassword"
                    tools:layout_editor_absoluteX="99dp" app:layout_constraintTop_toBottomOf="@+id/etPassword"
                    app:layout_constraintBottom_toTopOf="@+id/cbConditions"/>
            <CheckBox
                    android:text="CheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cbConditions"
                    tools:layout_editor_absoluteX="158dp"
                    app:layout_constraintTop_toBottomOf="@+id/etRepeatPassword"
                    app:layout_constraintBottom_toTopOf="@+id/bRegister"/>
            <Button
                    android:text="Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bRegister"
                    tools:layout_editor_absoluteX="162dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cbConditions"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</FrameLayout>